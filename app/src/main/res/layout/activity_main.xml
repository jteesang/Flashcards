<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="2dp"
        android:background="@drawable/test_shadow"
        android:background="@drawable/test_border"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="What color is the sun?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:text="Yellow"
        android:textAlignment="center"
        android:textSize="40sp"
        android:background="#ffca82"
        android:textColor="#c4daff"
        android:visibility="invisible" />

</RelativeLayout>